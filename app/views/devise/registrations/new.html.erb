<head>
  <% title("Sign Up") %>
</head>

<div class='cover-container'>
  <%= image_tag("VaqasMalik_JoshuaTree.jpg", class: "banner-image dont-move") %>
</div>

<section class="full-page-form form-on-image four columns offset-by-four">
  <h1 class="f4">Create an Account</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


    <div class="field">
      <h5 class="f2"><%= f.label :first_name %></h5>
      <%= f.text_field :first_name, autofocus: true %><br />
    </div>

    <div class="field">
      <h5><%= f.label :last_name, class: "f2" %></h5>
      <%= f.text_field :last_name %><br />
    </div>

    <div class="field">
      <h5><%= f.label :email, class: "f2" %></h5>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <h5><%= f.label :password, class: "f2" %></h5>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <h5><%= f.label "Confirm", class: "f2" %></h5>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions field">
      <h5></h5>
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

</section>
